@model AnonymousForum.Models.Reply

@{
    ViewData["Title"] = "Delete";
}

<h1 class="card-title">Delete Reply</h1>

<h3 class="sub-title">Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReplyTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReplyTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReplyDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReplyDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Thread)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Thread.ThreadDescription)
        </dd>
    </dl>
    
    <div class="btn">
        <form asp-action="Delete">
            <input type="hidden" asp-for="ReplyId" />
            <input type="submit" value="Delete" class="custom-button" />
        </form>
    </div>   

    <div>
        <a asp-action="Index" class="back-link">Back to List</a>
    </div>

</div>

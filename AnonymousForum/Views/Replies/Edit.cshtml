@model AnonymousForum.Models.Reply

@{
    ViewData["Title"] = "Edit";
}

<h1 class="card-title">Edit Reply</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReplyId" />
            <div class="form-group">
                <label asp-for="ReplyTitle" class="control-label"></label>
                <input asp-for="ReplyTitle" class="form-control" />
                <span asp-validation-for="ReplyTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReplyDescription" class="control-label"></label>
                <input asp-for="ReplyDescription" class="form-control" />
                <span asp-validation-for="ReplyDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FkThreadId" class="control-label"></label>
                <select asp-for="FkThreadId" class="form-control" asp-items="ViewBag.FkThreadId"></select>
                <span asp-validation-for="FkThreadId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="custom-button" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="back-link">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

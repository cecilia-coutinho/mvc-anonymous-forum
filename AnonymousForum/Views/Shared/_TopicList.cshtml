@model IEnumerable<AnonymousForum.Models.Topic>

<table class="topic-list-table">
    <thead>
        <tr>
            <th class="card-sub">
                @Html.DisplayNameFor(model => model.TopicName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="@Url.Action("TopicThreads", "Threads", new { id = item.TopicId })">@Html.DisplayFor(modelItem => item.TopicName)</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .topic-list-table {
        width: 100%;
        border-spacing: 0;
        border-collapse: collapse;
        background-color: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 10px 30px 0 rgba(0, 0, 0, 0.1);
        font-size: 20px;
    }

        .topic-list-table th,
        .topic-list-table td {
            padding: 12px 15px;
            text-align: left;
        }

        .topic-list-table tbody tr {
            border-bottom: 1px solid #e0e0e0;
        }

    .topic-list-tabletbody tr:last-child {
        border-bottom: none;
    }

    .topic-list-table-hover tbody tr:hover {
        background-color: #f2f2f2;
    }

    .topic-list-table a {
        text-decoration: none;
        color: #333;
    }

        .topic-list-table a:hover {
            color: #007bff;
        }

    .card-sub {
        font-size: 22px;
        color: #124559;
        font-weight: 500;
    }
</style>

@model List<AnonymousForum.Models.Thread>


<style>
    .spacer {
        padding-bottom: 10px;
    }

    .card-title {
        font-size: 22px;
        color: #124559;
        font-weight: 500;
        padding: 2rem;
    }

    .thread-list li {
        margin-top: 10px;
        background-color: #cbf3f0;
        border-radius: 5px;
        padding: 2rem;
        margin-right: 2rem;
    }

    .thread-list {
        list-style-type: none;
        color: #124559;
    }

    .thrd-a {
        color: #124559;
        font-weight: 600;
    }

    .spacer {
        padding-top: 1rem;
    }
</style>


<h1 class="card-title">Threads for Selected Topic</h1>

<ul class="thread-list">
    @foreach (var thread in Model)
    {
        <li>
            <a href="@Url.Action("Details", "Threads", new { id = thread.ThreadId })" class="thrd-a">@thread.ThreadTitle</a>
            <div class="spacer">@thread.ThreadDescription</div>
        </li>
    }
</ul>
<div class="btn">
    <a asp-action="Create" class="custom-button">Create New</a>
</div>

<div>
    <a asp-action="Index" asp-controller="Home" class="back-link">Back to Topics</a>
</div>

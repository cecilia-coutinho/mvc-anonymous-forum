@model AnonymousForum.Models.Thread

@{
    ViewData["Title"] = "Delete";
}

<h1 class="card-title">Delete Thread</h1>

<h3 class="sub-title">Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ThreadTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ThreadTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ThreadDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ThreadDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Topic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Topic.TopicName)
        </dd>
    </dl>

    <div style="margin-left: 10px;">
        <form asp-action="Delete">
            <input type="hidden" asp-for="ThreadId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>

    <div>
        <a asp-action="Index" class="back-link">Back to List</a>
    </div>
</div>

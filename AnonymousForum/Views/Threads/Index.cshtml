@model IEnumerable<AnonymousForum.Models.Thread>

@{
    ViewData["Title"] = "Index";
}

<h1 class="card-sub" style="padding-left:2rem">Threads</h1>

<div class="container">
    <ul class="topic-list-ul">
        @foreach (var item in Model)
        {
            <li class="topic-list-item">
                <div class="topic-name">
                    @Html.DisplayFor(modelItem => item.ThreadTitle)
                </div>
                <div class="topic-description">
                    @Html.DisplayFor(modelItem => item.ThreadDescription)
                </div>
                <div class="button-container">
                    <a asp-action="Details" asp-route-id="@item.ThreadId" class="button-link">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.ThreadId" class="button-link">Delete</a>
                </div>
            </li>
        }
    </ul>
</div>


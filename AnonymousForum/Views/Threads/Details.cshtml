@model AnonymousForum.Models.ViewModels.TopicThreadReplyViewModel

@{
    ViewData["Title"] = "Details";
    var isAuthenticated = Context.Session.GetString("IsAuthenticated");
}

<style>
    .bd {
        padding: 0 15px 15px 20px;
    }

    .title-style {
        font-size: 22px;
        font-weight:600;
    }

    .topic-style {
        font-weight: 100;
        font-style:italic;
    }

    .bd-style {
        padding-top: 20px;
    }
</style>

<h1 class="bd">Details</h1>

<div class="bd">
    <h4>Thread</h4>
    <hr />
    <dl class="row">
        <dd class="col-sm-10 title-style">
            @Html.DisplayFor(model => model.Thread.ThreadTitle)
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Thread.ThreadDescription)
        </dd>
        <div>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Topic)
        </dt>
            <dd class="col-sm-10 topic-style">
            @Html.DisplayFor(model => model.Topic.TopicName)
        </dd>
        </div>
    </dl>
</div>


<div class="bd">
    <h4>Replies</h4>
    <hr />
    @foreach (var reply in Model.Replies)
    {
        <div>
            <p>@reply.ReplyTitle</p>
            <p>@reply.ReplyDescription</p>
        </div>
    }

    @if (isAuthenticated == "false")
    {
    <div>
        <a href="@Url.Action("Create", "Replies", new { FkThreadId = Model.Thread.ThreadId })" class="btn btn-primary">Create New Reply</a>
    </div>
    }
</div>

<div class="bd-style bd">
    <a href="javascript:history.go(-1)">Back to previous page</a>
</div>
